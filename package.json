{
  "name": "next-typescript-template",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}' && stylelint '**/*.scss'",
    "lint:fix": "eslint './**/*.{js,jsx,ts,tsx}' --fix && stylelint '**/*.scss' --fix",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest ./src --coverage",
    "test:e2e": "cypress run --quiet"
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{md}": "prettier --write"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "classnames": "^2.3.1",
    "next": "latest",
    "next-plugin-preact": "^3.0.4",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.19",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-redux": "^7.2.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/user-event": "^13.0.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^26.0.0",
    "@types/node": "14.14.35",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@types/react-redux": "7.1.16",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cypress": "^7.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.0.0",
    "jest-css-modules-transform": "^4.2.0",
    "lint-staged": "^11.0.0",
    "node-sass": "4.14.1",
    "prettier": "^2.2.1",
    "sass-loader": "^11.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^9.0.0",
    "typescript": "4.2.3"
  }
}
